{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"src/*"
			]
		},
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"jsx": "preserve",
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": [
		"src",
		"types"
	],
}